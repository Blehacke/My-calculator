<CalculatorLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: input_box
        font_size: 32
        multiline: False
        readonly: True
        halign: 'right'
        size_hint: (1, 0.2)

    GridLayout:
        cols: 4
        spacing: 10
        size_hint: (1, 0.8)

        Button:
            text: "7"
            on_press: root.add_text("7")
        Button:
            text: "8"
            on_press: root.add_text("8")
        Button:
            text: "9"
            on_press: root.add_text("9")
        Button:
            text: "/"
            on_press: root.add_text("/")

        Button:
            text: "4"
            on_press: root.add_text("4")
        Button:
            text: "5"
            on_press: root.add_text("5")
        Button:
            text: "6"
            on_press: root.add_text("6")
        Button:
            text: "*"
            on_press: root.add_text("*")

        Button:
            text: "1"
            on_press: root.add_text("1")
        Button:
            text: "2"
            on_press: root.add_text("2")
        Button:
            text: "3"
            on_press: root.add_text("3")
        Button:
            text: "-"
            on_press: root.add_text("-")

        Button:
            text: "C"
            on_press: root.clear()
        Button:
            text: "0"
            on_press: root.add_text("0")
        Button:
            text: "="
            on_press: root.calculate()
        Button:
            text: "+"
            on_press: root.add_text("+")

        Button:
            text: "âŒ«"
            on_press: root.delete()